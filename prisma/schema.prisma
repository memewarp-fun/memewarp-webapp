generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Token {
  id          String @id
  name        String
  description String?
  imageUrl    String?
  creator     String

  flowAddress   String?
  hederaAddress String?
  flowCurve     String?
  hederaCurve   String?

  flowSupply    Float @default(0)
  hederaSupply  Float @default(0)
  totalSupply   Float @default(0)

  flowPrice     Float @default(0)
  hederaPrice   Float @default(0)

  flowPriceUSD  Float @default(0)
  hederaPriceUSD Float @default(0)
  priceUSD      Float @default(0)
  marketCapUSD  Float @default(0)

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}